{
  "manifest_version": 3,
  "name": "Better Mantis",
  "version": "0.0.1",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "js": [
        "vendor.js", "view.js"
      ],
      "matches": [
        "http://mantis.alfasig.com.br/view.php?*"
      ]
    },
    {
      "js": [
        "vendor.js", "board.js"
      ],
      "matches": [
        "http://mantis.alfasig.com.br/plugin.php?page=Scrum/board*"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}